<div class="form-wrapper">
    <h2>Book this room</h2>
      <div class="room-info">
        <p>Sleeps: <%= room.capacity %></p>
        <p><span id="room-price-per-night"><%= room.price_per_night %></span>€ /night</p>
      </div>

      <%= simple_form_for [room, @booking] do |f| %>
        <div class="calendar">
          <%= f.input :starts_at, label: false,
                                  as: :string,
                                  required: false,
                                  input_html: { id: "range_start", class: "d-none" } %>
          <%= f.input :ends_at, label: false,
                                as: :string,
                                required: false,
                                input_html: { id: "range_end", class: "d-none" } %>
        </div>
        <div class="totals">
          <p>Number of nights:</p>
          <p class="total-bold"> <span id="total-nights"></span></p>
        </div>
        <div class="totals">
          <p>Booking total:</p>
          <p class="total-bold"> <span id="total-price"></span>€</p>
        </div>
        <div class="form-button">
          <%= f.button :submit, "Book now!", class: "cool-button" %>
        </div>
      <% end %>
  </div>
